<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".presentation.leagues.DetailsLeagueFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:orientation="horizontal"
            android:weightSum="10"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/txtPoints"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="80"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtGoals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1.5"
                android:gravity="center"
                tools:text="61/21"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtLose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="2"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtDraw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="8"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txtWin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="24"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtPlay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="34"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="3.5"
                android:weightSum="5"
                android:orientation="horizontal"
                android:gravity="center|start">

                <TextView
                    android:id="@+id/teamName"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    tools:text="الاهلى"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights" />

                <ImageView
                    android:id="@+id/teamLogo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/africa_cup_of_nation_official_logo"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/name" />

                <TextView
                    android:id="@+id/teamNum"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    tools:text="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>